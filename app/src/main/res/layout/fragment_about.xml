<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/withers" >

    <TextView
        android:id="@+id/AppnameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xorgButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="GSAppTK"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AppnameLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Version GINO-GENERIC"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/homepageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="https://xorg.ga/" />

    <TextView
        android:id="@+id/VisitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/homepageButton"
        android:layout_centerHorizontal="true"
        android:text="" /> <!-- TODO: Remove -->

    <Button
        android:id="@+id/xorgButton"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/writtenby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versionText"
        android:layout_centerHorizontal="true"
        android:text="geschrieben von Fabian Schillig"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writtenby"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="26dp"
        android:text="Lizenzen" />

</RelativeLayout>
